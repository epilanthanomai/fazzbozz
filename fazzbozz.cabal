name:                fazzbozz
version:             0.1.0.0
synopsis:            Another overengineered fizzbuzz
homepage:            https://github.com/epilanthanomai/fazzbozz
license:             BSD3
license-file:        LICENSE
author:              Hope Ranker
maintainer:          hope.ranker@gmail.com
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

source-repository head
  type: git
  location: https://github.com/epilanthanomai/fazzbozz

library
  hs-source-dirs:
      src
  build-depends:
      base >=4.7 && <5,
      containers
  exposed-modules:
      Fazzbozz
      Fazzbozz.Base
      Fazzbozz.Core
      Fazzbozz.Matches
      Fazzbozz.Simple
  default-language: Haskell2010

executable fazzbozz
  hs-source-dirs:      app
  main-is:             Main.hs
  build-depends:       base >=4.7 && <5,
                       fazzbozz,
                       optparse-applicative,
                       split
  default-language:    Haskell2010
  other-modules:
    CmdOptions

test-suite test-fazzbozz
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test, app
  main-is:             Spec.hs
  build-depends:       base >=4.7 && <5,
                       fazzbozz,
                       HUnit,
                       optparse-applicative,
                       split,
                       containers
  default-language:    Haskell2010
  other-modules:
    CmdOptions
    Fazzbozz.TestCore
    Fazzbozz.TestMatches
    Fazzbozz.TestSimple
    TestCmdOptions
    TestIntegration
